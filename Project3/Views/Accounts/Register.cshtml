<script>
    document.addEventListener("DOMContentLoaded", function () {
        const passwordInput = document.getElementById("passwordInput");
        const passwordCfrInput = document.getElementById("passwordCfr");
        const showHideCheckbox = document.getElementById("showHideCheckbox");

        showHideCheckbox.addEventListener("click", function () {
            if (showHideCheckbox.checked) {
                passwordInput.type = "text";
                passwordCfrInput.type = "text";
            } else {
                passwordInput.type = "password";
                passwordCfrInput.type = "password";
            }
        });
    });
</script>
