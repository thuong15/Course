<!-- *** Main Banner Area Start *** -->
<section class="section" id="products">
	<div class="page-heading" id="top">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="inner-content">
						<h2>All Courses</h2>
						@*<span>Awesome &amp; Creative HTML CSS layout by TemplateMo</span>*@
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="container">
		<H1 style="margin:50px">- Basic</H1> <br />
		<div class="row">

			@foreach (var item in (IEnumerable<Project3.Models.CourseDetail>)ViewData["basic"])
			{
				<div class="col-lg-4">

					<div class="item">
						<div class="thumb">
							<div class="hover-content">
								<ul>
									<li><a asp-action="OrderCourses" asp-controller="Home" asp-route-id="@item.Course.CourseId"><i class="fa fa-eye"></i></a></li>

								</ul>
							</div>
							<img style="object-fit:inherit" height="258px" width="460px" src="~/Thumnails/@item.Course.Image" alt="">
						</div>
						<div class="down-content">
							<h4><a asp-action="OrderCourses" asp-controller="Home" asp-route-id="@item.CourseId">@item.Course.CourseName</a></h4>
							<span>
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
									<path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
								</svg>110.2
							</span>

						</div>
					</div>

				</div>
			}
		</div>

		<hr />

	</div>


	<div class="container">
		<H1 style="margin:50px">- Advanced</H1> <br />
		<div class="row">

			@foreach (var item in (IEnumerable<Project3.Models.CourseDetail>)ViewData["up"])
			{
				<div class="col-lg-4">

					<div class="item">
						<div class="thumb">
							<div class="hover-content">
								<ul>
									<li><a asp-action="OrderCourses" asp-controller="Home" asp-route-id="@item.Course.CourseId"><i class="fa fa-eye"></i></a></li>

								</ul>
							</div>
							<img style="object-fit:inherit" height="258px" width="460px" src="~/Thumnails/@item.Course.Image" alt="">
						</div>
						<div class="down-content">
							<h4><a asp-action="OrderCourses" asp-controller="Home" asp-route-id="@item.CourseId">@item.Course.CourseName</a></h4>
							<span>
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
									<path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
